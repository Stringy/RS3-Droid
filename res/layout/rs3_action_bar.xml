<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
        >

    <ImageView
            android:id="@+id/unreadImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_unread" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    <TextView
            android:id="@+id/unreadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/unreadImageView"
            android:layout_alignTop="@+id/unreadImageView"
            android:layout_alignLeft="@+id/unreadImageView"
            android:layout_alignRight="@+id/unreadImageView"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/app_name"
            android:gravity="center"
            android:id="@+id/actionBarTitle"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/unreadImageView"
            android:layout_alignBottom="@+id/unreadImageView"/>

</RelativeLayout>